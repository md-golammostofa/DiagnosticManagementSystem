
@{
    ViewBag.Title = "Invoice";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4 text-left">
                            
                        </div>
                        <div class="col-md-4 text-center">
                            <h4><b>Invoice List</b></h4>
                        </div>
                        <div class="col-md-4">
                            <a href="/Inventory/CreateInvoice" class="btn btn-outline-primary btn-sm float-lg-right" id="btnAddNew"><i class="fa fa-plus"></i>  Create Invoice</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header card-gray">
                <div class="col-md-12">
                    <div class="row text-left">
                        <div class="col-md-12">
                            @using (Html.BeginForm("GetSalesInvoiceReport", "Inventory", FormMethod.Get, new { @target = "_blank" }))
                            {
                                <form id="frmLstInvestigation" method="get">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label class="control-label font-weight-bold" for="txtInvoiceNo">Invoice No</label>
                                                <input type="text" class="form-control form-control-sm" placeholder="Search By Invoice" id="txtInvoiceNo" name="invoice" />
                                            </div>
                                            <div class="col-md-2" id="divReportType">
                                                <label class="control-label font-weight-bold" for="rptType">Type</label>
                                                <select name="rptType" id="rptType" class="form-control form-control-sm">
                                                    <option value="PDF">PDF</option>
                                                    <option value="EXCEL">EXCEL</option>
                                                </select>
                                            </div>
                                            <div class="col-md-1" id="divbtnReport">
                                                <label class="control-label font-weight-bold" for="Download" style="visibility:hidden">Download</label>
                                                <button type="submit" title="Download" class="btn btn-sm btn-outline-danger"><i class="fas fa-file-pdf"> </i></button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
        </div>
    </div>
    <div class="col-md-12 text-sm" id="dataContainer">
        @{Html.RenderAction("GetInvoiceInfoList", new { flag = "view" });}
    </div>
</div>

<div class="modal fade" id="modalSalesInvoiceDetails" role="dialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header alert-secondary" style="height:60px">
                @Html.AntiForgeryToken()
                <input type="hidden" id="hdfDetailsId" />
                <h4 id="modalHeading" class="modal-title">Invoice Details</h4>
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" id="dataContainer2">
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        var hdfDetailsId = $("#hdfDetailsId");
        var txtInvoiceNo = $("#txtInvoiceNo")

        txtInvoiceNo.keyup(function () {
            LoadDataTable();
        })

        function LoadDataTable() {
            var data = { flag: "search", invoice: txtInvoiceNo.val().trim()};

            console.log(data);
            $.when(getReqWithData('html', 'GET', '/Inventory/GetInvoiceInfoList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer").fadeOut('500', function () {
                        $("#dataContainer").empty();
                        $("#dataContainer").append(res).fadeIn('500');
                    });
                }
            }).fail(function (error) {
                console.log(error);
            })
        }

        $(document).on('click', 'a.data-details-item', function (e) {
            e.preventDefault();
            var id = $(this).attr("data-details-item");
            var data = { infoId: id };

            // return console.log(data);
            $.when(getReqWithData('html', 'GET', '/Inventory/GetInvoiceDetailsList', data)).then(function (res, status) {
                console.log(status);
                if (status === "success") {
                    $("#dataContainer2").empty();
                    $("#dataContainer2").append(res).fadeIn('500');
                    $("#modalSalesInvoiceDetails").modal("show");
                }
            }).fail(function (error) {
                console.log(error);
            });
        })
    </script>
    }