@model IEnumerable<HMSBO.ViewModels.VmSalesInvoiceInfo>
@{ 
    int sl = 0;
    string badge = string.Empty;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblSalesInvoiceInfo">
        <thead class="btn-info">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th>Action</th>
                <th style="vertical-align:middle">Invoice No</th>
                <th style="vertical-align:middle">Customer Type</th>
                <th style="vertical-align:middle">Payment Method</th>
                <th style="vertical-align:middle">SubTotal</th>
                <th style="vertical-align:middle">VAT</th>
                <th style="vertical-align:middle">Discount</th>
                <th style="vertical-align:middle">NetAmount</th>
                <th style="vertical-align:middle">DueAmount</th>
                <th style="vertical-align:middle">Status</th>
                <th style="vertical-align:middle">Date</th>
                <th style="vertical-align:middle">User</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
                badge = item.PaymentStatus == "Paid" ? "badge bg-success" : "badge bg-danger";
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.IInfoId</td>
                <td class="text-center">
                    <a href='#' class='data-edit btn btn-circle btn-warning btn-sm data-details-item' data-details-item='@item.IInfoId'><i class='fas fa-eye' title="Details"></i></a>
                </td>
                <td>@item.InvoiceNo</td>
                <td>@item.CustomerType</td>
                <td>@item.PaymentMethod</td>
                <td class="text-right">@item.SubTotalAmount.ToString("0.00")</td>
                <td class="text-right">@item.VATAmount.ToString("0.00")</td>
                <td class="text-right">@item.DisCountAmount.ToString("0.00")</td>
                <td class="text-right">@item.NetAmount.ToString("0.00")</td>
                <td class="text-right">@item.DueAmount.ToString("0.00")</td>
                <td class="text-center" style="color:white" data-val="@item.PaymentStatus">
                    <span class="@badge">@item.PaymentStatus</span>
                </td>
                <td>@item.EntryDate.Value.ToString("dd-MMM-yyyy")</td>
                <td>@item.EntryUser</td>
            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="9">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>