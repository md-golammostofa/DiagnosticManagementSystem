@model IEnumerable<HMSBO.ViewModels.VmProduct>
@{
    int sl = 0;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblProduct">
        <thead class="btn-info">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">Category Name</th>
                <th style="vertical-align:middle">Product Name</th>
                <th style="vertical-align:middle">BarCode</th>
                <th style="vertical-align:middle">Remarks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.ProductId</td>
                <td>@item.CategoryName</td>
                <td>@item.ProductName</td>
                <td>@item.BarCode</td>
                <td>@item.Remarks</td>
            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="9">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
