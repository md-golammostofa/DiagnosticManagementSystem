
@{
    ViewBag.Title = "Stock-In";
}

<div class="row">
    <div class="col-md-12 text-center">
        <div class="card card-gray shadow">
            <div class="card-header">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-4 text-left">
                            <a href="/Inventory/GetProductStockList" class="btn btn-sm btn-outline-primary" title="Back To List"><i class="fas fa-arrow-alt-circle-left"></i></a>
                        </div>
                        <div class="col-md-4 text-center">
                            <h4><b>Stock-In Process</b></h4>
                        </div>
                        <div class="col-md-4 hide">
                            <button class="btn btn-outline-danger btn-sm float-lg-right" id="btnReset" title="RESET UI"><i class="fas fa-sync-alt"></i> </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header">
                @Html.AntiForgeryToken()
                <div class="row text-sm">
                    <div class="col-md-2">
                        <label for="ddlCategory" class="control-label font-weight-bold">Category</label>
                        @Html.DropDownList("ddlCategory", (IEnumerable<SelectListItem>)ViewBag.ddlCategory, "--Select Category--", new { @class = "form-control form-control-sm select2 select2bs4 select2-danger search-control" })
                        <span class="error hide require-category font-weight-bold">Category is required !</span>
                    </div>
                    <div class="col-md-2">
                        <label for="ddlProductName" class="control-label font-weight-bold">Product Name</label>
                        <select id="ddlProductName" class="form-control form-control-sm select2 select2bs4 select2-danger search-control">
                            <option value="">--Selecet One--</option>
                        </select>
                        <span class="error hide require-productName font-weight-bold">Code is required !</span>
                        <span class="error hide duplicate-productName font-weight-bold">Already This product Exits !</span>
                    </div>
                    <div class="col-md-2">
                        <label for="txtCostPrice" class="control-label font-weight-bold">Cost Price</label>
                        <input type="number" name="stock" value="" id="txtCostPrice" class="form-control form-control-sm search-control" />
                        <span class="error hide require-costPrice font-weight-bold">Cost Price is required !</span>
                    </div>
                    <div class="col-md-2">
                        <label for="txtSellPrice" class="control-label font-weight-bold">Sell Price</label>
                        <input type="number" name="stock" value="" id="txtSellPrice" class="form-control form-control-sm search-control" />
                        <span class="error hide require-sellPrice font-weight-bold">Sell Price is required !</span>
                    </div>
                    <div class="col-md-1">
                        <label for="txtStockInQty" class="control-label font-weight-bold">Qty.</label>
                        <input type="number" name="stock" value="" id="txtStockInQty" class="form-control form-control-sm search-control" />
                        <span class="error hide require-qty font-weight-bold">Quantity is required !</span>
                    </div>
                    <div class="col-md-2">
                        <label for="txtRemarks" class="control-label font-weight-bold">Remarks</label>
                        <input type="text" name="stock" value="" id="txtRemarks" class="form-control form-control-sm search-control" />
                    </div>
                    <div class="col-md-1">
                        <label for="" class="control-label font-weight-bold" style="visibility:hidden">dddd</label>
                        <div class="clearfix">
                            <button type="submit" class="btn btn-sm btn-success float-lg-right mr-1" id="btnAddToList" title="Add To List"><i class="fas fa-plus"></i> </button>
                        </div>
                    </div>
                </div>
                <div class="row text-sm">
                    <div class="col-md-12">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12" style="overflow-y:scroll">
                                        <table class="table table-bordered table-sm table-striped table-responsive-lg" id="ProductStock">
                                            <thead>
                                                <tr>
                                                    <th colspan="9">
                                                        <button class="btn btn-outline-success btn-sm float-lg-right" id="btnSubmit">SAVE <i class="fas fa-paper-plane"></i> </button>
                                                    </th>
                                                </tr>
                                                <tr class="btn-info text-center">
                                                    <td>#SL</td>
                                                    <td class="hide">CategoryName</td>
                                                    <td>ProductName</td>
                                                    <td>Cost Price</td>
                                                    <td>Sell Price</td>
                                                    <td>Quantity</td>
                                                    <td>Remarks</td>
                                                    <td>Action</td>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        var ddlCategory = $("#ddlCategory");
        var ddlProductName = $("#ddlProductName");
        var txtCostPrice = $("#txtCostPrice");
        var txtSellPrice = $("#txtSellPrice");
        var txtStockInQty = $("#txtStockInQty");
        var txtRemarks = $("#txtRemarks");

        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2();

            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'classic'
            });
        })
        ddlCategory.change(function () {
            clearDropdown("ddlProductName");
            if (ddlCategory.val() != "") {
                LoadDropDown('/Inventory/GetProductName', 'POST', ddlProductName, JSON.stringify({ category: ddlCategory.val() }));
            }
        })

        function validateInput() {
            $('.error').addClass('hide');
            var isValid = true;
            var count = $("#ProductStock tbody tr").length;
            if (count > 0) {
                $.each($("#ProductStock tbody tr"), function (index, item) {
                    var product = $(this).children('td').eq(2).html();
                    if (product == ddlProductName.val()) {
                        isValid = false;
                        $(".duplicate-productName").removeClass('hide');
                    }
                })
            }
            if ($.trim(ddlCategory.val()) == "") {
                $(".require-category").removeClass("hide");
                isValid = false;
            }
            if ($.trim(ddlProductName.val()) == "") {
                $(".require-productName").removeClass("hide");
                isValid = false;
            }
            if (txtCostPrice.val() == "" || TryParseFloat(txtCostPrice.val(), 0) <= 0) {
                isValid = false;
                $(".require-costPrice").removeClass("hide");
            }
            if (txtSellPrice.val() == "" || TryParseFloat(txtSellPrice.val(), 0) <= 0) {
                isValid = false;
                $(".require-sellPrice").removeClass("hide");
            }
            if (txtStockInQty.val() == "" || TryParseInt(txtStockInQty.val(), 0) <= 0) {
                isValid = false;
                $(".require-qty").removeClass("hide");
            }
            return isValid;
        }
        $("#btnAddToList").click(function (e) {
            e.preventDefault();
            if (validateInput() == true) {
                var sl = $("#ProductStock tbody tr").length;
                var td1 = "<td class='text-center text-bold'>" + (sl + 1) + "</td>"
                var td2 = "<td class='text-center hide'>" + ddlCategory.val() + "</td>";
                var td3 = "<td class='text-center'>" + ddlProductName.val() + "</td>";
                var td4 = "<td class='text-center'>" + txtCostPrice.val() + "</td>"; 
                var td5 = "<td class='text-center'>" + txtSellPrice.val() + "</td>";
                var td6 = "<td class='text-center'>" + txtStockInQty.val() + "</td>";
                var td7 = "<td class='text-center'>" + txtRemarks.val() + "</td>";
                var td8 = "<td class='text-center'><a href='#' class='btn btn-sm btn-danger data-onfly-del'><i class='far fa-trash-alt'></i></a></td>";

                var tr = "<tr>" + td1 + td2 + td3 + td4 + td5 + td6 + td7 + td8 + "</tr>";

                if ($("#ProductStock tbody tr").length == 0) {
                    $("#ProductStock tbody").append(tr);
                }
                else {
                    $("#ProductStock tbody tr").eq(0).before(tr);
                }
                clearCtrl();
            }
        })

        function clearCtrl() {
            ddlProductName.val('');
            txtCostPrice.val('');
            txtSellPrice.val('');
            txtStockInQty.val('');
            txtRemarks.val('');
        }
        $(document).on("click", "a.data-onfly-del", function (e) {
            e.preventDefault();
            var index = $(this).parent().parents('tbody tr').index();
            removeTableRow("#ProductStock tbody", index);
            fnFixTheTbodyRowSerialInDecsOrder("#ProductStock", index);
        });
        $("#btnSubmit").click(function (e) {
            e.preventDefault();
            $('.error').addClass('hide');
            if ($("#ProductStock tbody tr").length > 0) {

                var details = []; details.length = 0;
                $.each($("#ProductStock tbody tr"), function (index, item) {
                    var tds = $(this).children("td");
                    var cate = tds.eq("1").html();
                    var product = tds.eq("2").html();
                    var cost = tds.eq("3").html();
                    var sell = tds.eq("4").html();
                    var qty = tds.eq("5").html();
                    var rmk = tds.eq("6").html();
                    details.push({
                        Category: cate,
                        ProductName: product,
                        CostPrice: TryParseFloat(cost, 0),
                        SellPrice: TryParseFloat(sell, 0),
                        Quantity: TryParseInt(qty, 0),
                        Remarks: rmk
                    })
                });
                var data = JSON.stringify({ details: details });
                //return console.log(data);
                $.when(postReqWithToken(dataType.applicationJson, dataType.json, 'POST', '/Inventory/SaveProductStockIn', data, getToken())).then(function (res, status) {
                        if (res == true) {
                            alert(execuStatus.successSave);

                                setTimeout(function () {
                                    redirectPage('@Url.Action("GetProductStockList")');
                                }, 1000);
                            }
                            else {
                            alert(execuStatus.fail);
                            }
                    }).fail(function (err) {
                        alert(execuStatus.fail);
                    })
            }
        })
        function redirectPage(page) {
            window.location.replace(page);
        }
    </script>
    }