@model IEnumerable<HMSBO.ViewModels.VmProductStockInfo>
@{ 
    int sl = 0;
    string badge = string.Empty;
}
<div class="col-md-12 text-sm" style="overflow-y:scroll">
    <table class="table table-bordered table-sm table-striped" id="tblProductStockInfo">
        <thead class="btn-info">
            <tr class="text-center">
                <th style="vertical-align:middle">#SL</th>
                <th class="hide"></th>
                <th style="vertical-align:middle">Category Name</th>
                <th style="vertical-align:middle">Product Name</th>
                <th style="vertical-align:middle">Cost Price</th>
                <th style="vertical-align:middle">Sell Price</th>
                <th style="vertical-align:middle">Stock-In Qty</th>
                <th style="vertical-align:middle">Stock-Out Qty</th>
                <th style="vertical-align:middle">Stock Qty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                sl = sl + 1;
            <tr>
                <td class="text-center">@sl</td>
                <td class="hide">@item.PSInfoId</td>
                <td>@item.Category</td>
                <td>@item.ProductName</td>
                <td class="text-right">@item.CostPrice.ToString("0.00")</td>
                <td class="text-right">@item.SellPrice.ToString("0.00")</td>
                <td class="text-center">@item.StockInQty</td>
                <td class="text-center">@item.StockOutQty</td>
                <td class="text-center">@item.StockQty</td>
            </tr>
            }
            @if (Model.Count() == 0)
            {
                <tr class="text-center empty-row">
                    <td colspan="9">
                        No Rows Found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
